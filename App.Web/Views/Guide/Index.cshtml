@model IEnumerable<Guide>
@{
    ViewData["Title"] = "Gids";
}
<h2>Gids</h2>
@if (Model != null && Model.Count() > 0)
{
    <ul>
    @foreach (var guide in Model)
    {
        <li class="guide">
            <p>@guide.Offers</p>
            <p>@guide.Requests</p>
            @Html.ActionLink("Meer info...", "Details", new { id = @guide.Id})
        </li>
    }
    </ul>
}
else
{
    <div>Geen gids</div>
}