@model IEnumerable<Groups>
@{
    ViewData["Title"] = "Groepen";
}
<h2>Groepen</h2>
@if (Model != null && Model.Count() > 0)
{
    <ul>
    @foreach (var groups in Model)
    {
        <li class="groups">
            <h3>@groups.GroupName</h3>
            <p>@groups.Offers</p>
            <p>@groups.Requests</p>
            @Html.ActionLink("Meer info...", "Details", new { id = @groups.Id})
        </li>
    }
    </ul>
}
else
{
    <div>Geen groepen</div>
}